NODE_ENV=development
PORT=3000

# JWT Security
# IMPORTANTE: Generar con: npm run security:generate-jwt
JWT_SECRET=your-generated-512-bit-secret-here

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=on_tour_app

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:5173

# Security & Rate Limiting
# Lista de IPs exentas de rate limiting (separadas por comas)
RATE_LIMIT_WHITELIST=127.0.0.1,::1

# Environment (afecta sanitización de errores en producción)
NODE_ENV=development

# Firebase Admin SDK
# Project ID de Firebase (obligatorio)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Ruta al archivo de service account (opcional en desarrollo)
# Si no se especifica, usa Application Default Credentials
FIREBASE_SERVICE_ACCOUNT_PATH=../firebase-admin-key.json
