{
  "name": "on-tour-app-backend",
  "version": "1.0.0",
  "description": "On Tour App Backend API - FASE 6",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.ts\"",
    "migration:generate": "typeorm migration:generate",
    "migration:run": "typeorm migration:run",
    "migration:revert": "typeorm migration:revert",
    "seed": "node --loader ts-node/esm src/scripts/seed.ts",
    "db:reset": "npm run migration:revert && npm run migration:run && npm run seed",
    "security:generate-jwt": "node scripts/generate-jwt-secret.js",
    "security:verify": "node scripts/verify-security.js",
    "security:guide": "node scripts/integration-guide.js",
    "firebase:verify": "node scripts/verify-firebase.js",
    "firebase:setup": "node scripts/firebase-setup.js"
  },
  "dependencies": {
    "@types/nodemailer": "^7.0.3",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "firebase-admin": "^13.6.0",
    "helmet": "^7.1.0",
    "ical.js": "^2.2.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "pg": "^8.10.0",
    "pino": "^8.16.1",
    "pino-http": "^8.5.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "stripe": "^19.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tsdav": "^2.1.6",
    "typeorm": "^0.3.16",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.20",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/ui": "^0.34.6",
    "eslint": "^8.52.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
