{
  "name": "on-tour-backend",
  "version": "1.0.0",
  "description": "On Tour App - Backend API (FASE 6)",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --watch",
    "test:run": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:migrate": "node --loader tsx ./src/db/migrate.ts",
    "db:seed": "node --loader tsx ./src/db/seed.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-spotify": "^2.0.4",
    "jsonwebtoken": "^9.1.2",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.3",
    "kysely": "^0.27.3",
    "zod": "^3.22.4",
    "socket.io": "^4.7.2",
    "redis": "^4.6.12",
    "bull": "^4.11.5",
    "pino": "^8.16.2",
    "pino-http": "^8.6.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/jest": "^29.5.11",
    "@types/pg": "^8.11.2",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
