rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // MULTI-TENANCY HELPER FUNCTIONS
    // ========================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Get current user ID
    function getUserId() {
      return request.auth.uid;
    }
    
    // Check if user is a member of the organization
    function isMember(orgId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/organizations/$(orgId)/members/$(getUserId()));
    }
    
    // Get user's role in organization
    function getMemberRole(orgId) {
      return get(/databases/$(database)/documents/organizations/$(orgId)/members/$(getUserId())).data.role;
    }
    
    // Get user's permissions array in organization
    function getMemberPermissions(orgId) {
      return get(/databases/$(database)/documents/organizations/$(orgId)/members/$(getUserId())).data.permissions;
    }
    
    // Check if user has specific permission
    function hasPermission(orgId, permission) {
      return isMember(orgId) && getMemberPermissions(orgId).hasAny([permission]);
    }
    
    // Role hierarchy checks
    function isOwner(orgId) {
      return isMember(orgId) && getMemberRole(orgId) == 'owner';
    }
    
    function isAdmin(orgId) {
      return isMember(orgId) && getMemberRole(orgId) in ['owner', 'admin'];
    }
    
    function isFinanceRole(orgId) {
      return isMember(orgId) && getMemberRole(orgId) in ['owner', 'admin', 'finance'];
    }
    
    function canWrite(orgId) {
      return isMember(orgId) && getMemberRole(orgId) in ['owner', 'admin', 'member'];
    }
    
    function canRead(orgId) {
      return isMember(orgId); // All members can read (including viewers)
    }
    
    // Granular permission checks by module
    function canReadFinance(orgId) {
      return hasPermission(orgId, 'finance.read');
    }
    
    function canWriteFinance(orgId) {
      return hasPermission(orgId, 'finance.write');
    }
    
    function canDeleteFinance(orgId) {
      return hasPermission(orgId, 'finance.delete');
    }
    
    function canExportFinance(orgId) {
      return hasPermission(orgId, 'finance.export');
    }
    
    function canReadShows(orgId) {
      return hasPermission(orgId, 'shows.read');
    }
    
    function canWriteShows(orgId) {
      return hasPermission(orgId, 'shows.write');
    }
    
    function canDeleteShows(orgId) {
      return hasPermission(orgId, 'shows.delete');
    }
    
    function canReadCalendar(orgId) {
      return hasPermission(orgId, 'calendar.read');
    }
    
    function canWriteCalendar(orgId) {
      return hasPermission(orgId, 'calendar.write');
    }
    
    function canDeleteCalendar(orgId) {
      return hasPermission(orgId, 'calendar.delete');
    }
    
    function canReadTravel(orgId) {
      return hasPermission(orgId, 'travel.read');
    }
    
    function canWriteTravel(orgId) {
      return hasPermission(orgId, 'travel.write');
    }
    
    function canDeleteTravel(orgId) {
      return hasPermission(orgId, 'travel.delete');
    }
    
    function canReadContacts(orgId) {
      return hasPermission(orgId, 'contacts.read');
    }
    
    function canWriteContacts(orgId) {
      return hasPermission(orgId, 'contacts.write');
    }
    
    function canDeleteContacts(orgId) {
      return hasPermission(orgId, 'contacts.delete');
    }
    
    function canReadContracts(orgId) {
      return hasPermission(orgId, 'contracts.read');
    }
    
    function canWriteContracts(orgId) {
      return hasPermission(orgId, 'contracts.write');
    }
    
    function canDeleteContracts(orgId) {
      return hasPermission(orgId, 'contracts.delete');
    }
    
    function canManageMembers(orgId) {
      return hasPermission(orgId, 'members.manage_roles');
    }
    
    function canInviteMembers(orgId) {
      return hasPermission(orgId, 'members.invite');
    }
    
    function canRemoveMembers(orgId) {
      return hasPermission(orgId, 'members.remove');
    }
    
    // LEGACY: Check if user owns the data (backward compatibility)
    function isOwnerLegacy(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // LEGACY: Helper function to check if user owns the organization
    function userOwnsOrg(userId, orgId) {
      return isOwnerLegacy(userId);
    }
    
    // User data - users can only access their own data
    match /users/{userId} {
      // Allow user to read and write their own data
      allow read, write: if isOwner(userId);
      
      // User profile
      match /profile/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // User organizations
      match /organizations/{orgId} {
        allow read, write: if isOwner(userId);
        
        // Organization profile (including completedActions)
        match /profile/{document=**} {
          allow read, write: if userOwnsOrg(userId, orgId);
        }
        
        // ========================================
        // SCALABLE SUB-COLLECTIONS (NEW)
        // ========================================
        
        // Finance snapshots with transactions sub-collection
        match /finance_snapshots/{snapshotId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          
          // Transactions sub-collection (SCALABLE)
          match /transactions/{transactionId} {
            allow read, write: if userOwnsOrg(userId, orgId);
            
            // Allow queries on transactions
            allow list: if userOwnsOrg(userId, orgId);
          }
        }
        
        // Organization-scoped shows (SCALABLE)
        match /shows/{showId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Organization-scoped contacts (SCALABLE)
        match /contacts/{contactId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Organization-scoped venues (SCALABLE)
        match /venues/{venueId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Organization-scoped calendar events (SCALABLE)
        match /calendar_events/{eventId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Organization-scoped budgets (SCALABLE)
        match /budgets/{budgetId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Organization-scoped actions (SCALABLE)
        match /actions/{actionId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Organization-scoped itineraries (SCALABLE)
        match /itineraries/{itineraryId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
      }
      
      // LEGACY PATHS (Maintain during migration period)
      // These will be removed after migration is complete
      
      // User shows (LEGACY - will be migrated)
      match /shows/{showId} {
        allow read, write: if isOwner(userId);
      }
      
      // User contacts (LEGACY - will be migrated)
      match /contacts/{contactId} {
        allow read, write: if isOwner(userId);
      }
      
      // User venues (LEGACY - will be migrated)
      match /venues/{venueId} {
        allow read, write: if isOwner(userId);
      }
      
      // User transactions/finance (LEGACY - will be migrated)
      match /transactions/{transactionId} {
        allow read, write: if isOwner(userId);
      }
      
      // User travel/itineraries (LEGACY - will be migrated)
      match /itineraries/{itineraryId} {
        allow read, write: if isOwner(userId);
      }
      
      // Calendar events (LEGACY - will be migrated)
      match /calendarEvents/{eventId} {
        allow read, write: if isOwner(userId);
      }
      
      match /calendar_events/{eventId} {
        allow read, write: if isOwner(userId);
      }
      
      // Actions (LEGACY - will be migrated)
      match /actions/{actionId} {
        allow read, write: if isOwner(userId);
      }
      
      // Budgets (LEGACY - will be migrated)
      match /budgets/{budgetId} {
        allow read, write: if isOwner(userId);
      }
      
      // User settings (NOT migrated - stays at user level)
      match /settings/{document=**} {
        allow read, write: if isOwnerLegacy(userId);
      }
      
      // User preferences (NOT migrated - stays at user level)
      match /preferences/{document=**} {
        allow read, write: if isOwnerLegacy(userId);
      }
      
      // Calendar sync configuration (NOT migrated - stays at user level)
      match /calendarSync/{document=**} {
        allow read, write: if isOwnerLegacy(userId);
      }
    }
    
    // ========================================
    // MULTI-TENANCY: ORGANIZATIONS (NEW)
    // ========================================
    
    match /organizations/{orgId} {
      // Anyone can create an organization (becomes owner)
      allow create: if isAuthenticated();
      
      // Only members can read organization data
      allow read: if canRead(orgId);
      
      // Only owner/admin can update organization settings
      allow update: if isAdmin(orgId);
      
      // Only owner can delete organization
      allow delete: if isOwner(orgId);
      
      // Members Sub-collection
      match /members/{memberId} {
        allow read: if canRead(orgId);
        allow create: if canInviteMembers(orgId);
        allow update: if canManageMembers(orgId) &&
          // Cannot change owner role unless you are owner
          (request.resource.data.role != 'owner' || isOwner(orgId)) &&
          (resource.data.role != 'owner' || isOwner(orgId));
        allow delete: if canRemoveMembers(orgId) && resource.data.role != 'owner';
      }
      
      // Shows Sub-collection - granular permissions
      match /shows/{showId} {
        allow read: if canReadShows(orgId);
        allow create, update: if canWriteShows(orgId);
        allow delete: if canDeleteShows(orgId);
      }
      
      // Finance Snapshots Sub-collection - granular permissions
      match /finance_snapshots/{snapshotId} {
        allow read: if canReadFinance(orgId);
        allow create, update: if canWriteFinance(orgId);
        allow delete: if canDeleteFinance(orgId);
        
        // Transactions sub-collection with granular finance permissions
        match /transactions/{txId} {
          allow read: if canReadFinance(orgId);
          allow create: if canWriteFinance(orgId) &&
            request.resource.data.createdBy == getUserId();
          allow update: if canWriteFinance(orgId) &&
            (isAdmin(orgId) || resource.data.createdBy == getUserId());
          allow delete: if canDeleteFinance(orgId);
        }
      }
      
      // Calendar Events Sub-collection - granular permissions
      match /calendar_events/{eventId} {
        allow read: if canReadCalendar(orgId);
        allow create, update: if canWriteCalendar(orgId);
        allow delete: if canDeleteCalendar(orgId);
      }
      
      // Contacts Sub-collection - granular permissions
      match /contacts/{contactId} {
        allow read: if canReadContacts(orgId);
        allow create, update: if canWriteContacts(orgId);
        allow delete: if canDeleteContacts(orgId);
      }
      
      // Venues Sub-collection - granular permissions (uses contacts permissions)
      match /venues/{venueId} {
        allow read: if canReadContacts(orgId);
        allow create, update: if canWriteContacts(orgId);
        allow delete: if canDeleteContacts(orgId);
      }
      
      // Contracts Sub-collection - granular permissions
      match /contracts/{contractId} {
        allow read: if canReadContracts(orgId);
        allow create, update: if canWriteContracts(orgId);
        allow delete: if canDeleteContracts(orgId);
        
        // Contract parties nested collection
        match /parties/{partyId} {
          allow read: if canReadContracts(orgId);
          allow create, update: if canWriteContracts(orgId);
          allow delete: if canDeleteContracts(orgId);
        }
      }
      
      // Itineraries Sub-collection - granular permissions (uses travel permissions)
      match /itineraries/{itineraryId} {
        allow read: if canReadTravel(orgId);
        allow create, update: if canWriteTravel(orgId);
        allow delete: if canDeleteTravel(orgId);
      }
      
      // Actions Sub-collection - any member can manage actions
      match /actions/{actionId} {
        allow read: if canRead(orgId);
        allow create, update: if canWrite(orgId);
        allow delete: if canWrite(orgId);
      }
      
      // Invitations Sub-collection
      match /invitations/{inviteId} {
        allow read: if canInviteMembers(orgId);
        allow create: if canInviteMembers(orgId) &&
          request.resource.data.invitedBy == getUserId() &&
          request.resource.data.status == 'pending';
        allow update: if isAuthenticated() &&
          request.auth.token.email == resource.data.email &&
          request.resource.data.status in ['accepted', 'rejected'];
        allow delete: if canInviteMembers(orgId);
      }
      
      // Audit Logs Sub-collection - read-only for admins, write only via Cloud Functions
      match /audit_logs/{logId} {
        allow read: if isAdmin(orgId);
        allow create: if false; // Only Cloud Functions can write logs
        allow update, delete: if false; // Logs are immutable
      }
    }
    
    // Public data (if any) - currently none
    // match /public/{document=**} {
    //   allow read: if true;
    //   allow write: if isAuthenticated();
    // }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
