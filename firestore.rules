rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Helper function to check if user owns the organization
    // Simplified: if user owns the parent path, they can access org data
    function userOwnsOrg(userId, orgId) {
      return isOwner(userId);
    }
    
    // User data - users can only access their own data
    match /users/{userId} {
      // Allow user to read and write their own data
      allow read, write: if isOwner(userId);
      
      // User profile
      match /profile/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // User organizations
      match /organizations/{orgId} {
        allow read, write: if isOwner(userId);
        
        // Organization profile (including completedActions)
        match /profile/{document=**} {
          allow read, write: if userOwnsOrg(userId, orgId);
        }
        
        // ========================================
        // SCALABLE SUB-COLLECTIONS (NEW)
        // ========================================
        
        // Finance snapshots with transactions sub-collection
        match /finance_snapshots/{snapshotId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          
          // Transactions sub-collection (SCALABLE)
          match /transactions/{transactionId} {
            allow read, write: if userOwnsOrg(userId, orgId);
            
            // Allow queries on transactions
            allow list: if userOwnsOrg(userId, orgId);
          }
        }
        
        // Organization-scoped shows (SCALABLE)
        match /shows/{showId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Organization-scoped contacts (SCALABLE)
        match /contacts/{contactId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Organization-scoped venues (SCALABLE)
        match /venues/{venueId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Organization-scoped calendar events (SCALABLE)
        match /calendar_events/{eventId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Organization-scoped budgets (SCALABLE)
        match /budgets/{budgetId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Organization-scoped actions (SCALABLE)
        match /actions/{actionId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Organization-scoped itineraries (SCALABLE)
        match /itineraries/{itineraryId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
      }
      
      // LEGACY PATHS (Maintain during migration period)
      // These will be removed after migration is complete
      
      // User shows (LEGACY - will be migrated)
      match /shows/{showId} {
        allow read, write: if isOwner(userId);
      }
      
      // User contacts (LEGACY - will be migrated)
      match /contacts/{contactId} {
        allow read, write: if isOwner(userId);
      }
      
      // User venues (LEGACY - will be migrated)
      match /venues/{venueId} {
        allow read, write: if isOwner(userId);
      }
      
      // User transactions/finance (LEGACY - will be migrated)
      match /transactions/{transactionId} {
        allow read, write: if isOwner(userId);
      }
      
      // User travel/itineraries (LEGACY - will be migrated)
      match /itineraries/{itineraryId} {
        allow read, write: if isOwner(userId);
      }
      
      // Calendar events (LEGACY - will be migrated)
      match /calendarEvents/{eventId} {
        allow read, write: if isOwner(userId);
      }
      
      match /calendar_events/{eventId} {
        allow read, write: if isOwner(userId);
      }
      
      // Actions (LEGACY - will be migrated)
      match /actions/{actionId} {
        allow read, write: if isOwner(userId);
      }
      
      // Budgets (LEGACY - will be migrated)
      match /budgets/{budgetId} {
        allow read, write: if isOwner(userId);
      }
      
      // User settings (NOT migrated - stays at user level)
      match /settings/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // User preferences (NOT migrated - stays at user level)
      match /preferences/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Calendar sync configuration (NOT migrated - stays at user level)
      match /calendarSync/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Public data (if any) - currently none
    // match /public/{document=**} {
    //   allow read: if true;
    //   allow write: if isAuthenticated();
    // }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
