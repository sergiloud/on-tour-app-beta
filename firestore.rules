rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // MULTI-TENANCY SECURITY RULES
    // On Tour App - Production Ready
    // Last Updated: November 2025
    // ========================================
    
    // ========================================
    // CORE HELPER FUNCTIONS
    // ========================================
    
    // Authentication check
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Get current user ID
    function getUserId() {
      return request.auth.uid;
    }
    
    // Get user email
    function getUserEmail() {
      return request.auth.token.email;
    }
    
    // ========================================
    // ORGANIZATION MEMBERSHIP FUNCTIONS
    // ========================================
    
    // Check if user is a member of the organization
    function isMember(orgId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/organizations/$(orgId)/members/$(getUserId()));
    }
    
    // Get user's role in organization
    function getMemberRole(orgId) {
      return get(/databases/$(database)/documents/organizations/$(orgId)/members/$(getUserId())).data.role;
    }
    
    // Get user's permissions array in organization
    function getMemberPermissions(orgId) {
      return get(/databases/$(database)/documents/organizations/$(orgId)/members/$(getUserId())).data.permissions;
    }
    
    // Check if user has specific permission
    function hasPermission(orgId, permission) {
      return isMember(orgId) && 
        getMemberPermissions(orgId).hasAny([permission]);
    }
    
    // ========================================
    // ROLE-BASED ACCESS CONTROL (RBAC)
    // ========================================
    
    // Owner: Full control over organization
    function isOwner(orgId) {
      return isMember(orgId) && getMemberRole(orgId) == 'owner';
    }
    
    // Admin: Can manage organization (except delete)
    function isAdmin(orgId) {
      return isMember(orgId) && getMemberRole(orgId) in ['owner', 'admin'];
    }
    
    // Finance role: Can manage financial data
    function isFinanceRole(orgId) {
      return isMember(orgId) && getMemberRole(orgId) in ['owner', 'admin', 'finance'];
    }
    
    // Can write: Members with write privileges
    function canWrite(orgId) {
      return isMember(orgId) && getMemberRole(orgId) in ['owner', 'admin', 'member'];
    }
    
    // Can read: All members (including viewers)
    function canRead(orgId) {
      return isMember(orgId);
    }
    
    // ========================================
    // GRANULAR PERMISSION FUNCTIONS BY MODULE
    // ========================================
    
    // Finance permissions
    function canReadFinance(orgId) {
      return hasPermission(orgId, 'finance.read');
    }
    
    function canWriteFinance(orgId) {
      return hasPermission(orgId, 'finance.write');
    }
    
    function canDeleteFinance(orgId) {
      return hasPermission(orgId, 'finance.delete');
    }
    
    function canExportFinance(orgId) {
      return hasPermission(orgId, 'finance.export');
    }
    
    // Shows permissions
    function canReadShows(orgId) {
      return hasPermission(orgId, 'shows.read');
    }
    
    function canWriteShows(orgId) {
      return hasPermission(orgId, 'shows.write');
    }
    
    function canDeleteShows(orgId) {
      return hasPermission(orgId, 'shows.delete');
    }
    
    // Calendar permissions
    function canReadCalendar(orgId) {
      return hasPermission(orgId, 'calendar.read');
    }
    
    function canWriteCalendar(orgId) {
      return hasPermission(orgId, 'calendar.write');
    }
    
    function canDeleteCalendar(orgId) {
      return hasPermission(orgId, 'calendar.delete');
    }
    
    // Travel permissions
    function canReadTravel(orgId) {
      return hasPermission(orgId, 'travel.read');
    }
    
    function canWriteTravel(orgId) {
      return hasPermission(orgId, 'travel.write');
    }
    
    function canBookTravel(orgId) {
      return hasPermission(orgId, 'travel.book');
    }
    
    function canDeleteTravel(orgId) {
      return hasPermission(orgId, 'travel.delete');
    }
    
    // Contacts permissions
    function canReadContacts(orgId) {
      return hasPermission(orgId, 'contacts.read');
    }
    
    function canWriteContacts(orgId) {
      return hasPermission(orgId, 'contacts.write');
    }
    
    function canDeleteContacts(orgId) {
      return hasPermission(orgId, 'contacts.delete');
    }
    
    // Contracts permissions
    function canReadContracts(orgId) {
      return hasPermission(orgId, 'contracts.read');
    }
    
    function canWriteContracts(orgId) {
      return hasPermission(orgId, 'contracts.write');
    }
    
    function canDeleteContracts(orgId) {
      return hasPermission(orgId, 'contracts.delete');
    }
    
    // Member management permissions
    function canManageMembers(orgId) {
      return hasPermission(orgId, 'members.manage_roles');
    }
    
    function canInviteMembers(orgId) {
      return hasPermission(orgId, 'members.invite');
    }
    
    function canRemoveMembers(orgId) {
      return hasPermission(orgId, 'members.remove');
    }
    
    // ========================================
    // AGENCY-ARTIST LINK PERMISSIONS
    // ========================================
    
    // Check if user can manage links (agency-artist relationships)
    function canManageLinks(userId) {
      return isAuthenticated() && getUserId() == userId;
    }
    
    // Validate link invitation data
    function isValidLinkInvitation() {
      return request.resource.data.keys().hasAll([
        'agencyUserId', 'artistUserId', 'agencyOrgId', 'agencyOrgName',
        'status', 'proposedScopes', 'createdAt', 'expiresAt'
      ]) &&
      request.resource.data.status in ['pending', 'accepted', 'rejected', 'cancelled'] &&
      request.resource.data.agencyUserId == getUserId();
    }
    
    // Validate link data
    function isValidLink() {
      return request.resource.data.keys().hasAll([
        'agencyUserId', 'artistUserId', 'agencyOrgId', 'artistOrgId',
        'status', 'scopes', 'createdAt'
      ]) &&
      request.resource.data.status in ['active', 'suspended', 'terminated'];
    }
    
    // ========================================
    // LEGACY COMPATIBILITY FUNCTIONS
    // ========================================
    
    // LEGACY: Check if user owns the data (backward compatibility)
    function isOwnerLegacy(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // LEGACY: Helper function to check if user owns the organization
    function userOwnsOrg(userId, orgId) {
      return isOwnerLegacy(userId);
    }
    
    // ========================================
    // VALIDATION HELPERS
    // ========================================
    
    // Validate required fields exist
    function hasRequiredFields(fields) {
      return request.resource.data.keys().hasAll(fields);
    }
    
    // Validate timestamps
    function hasValidTimestamps() {
      return request.resource.data.createdAt is timestamp &&
        request.resource.data.updatedAt is timestamp;
    }
    
    // Prevent timestamp manipulation
    function timestampsUnchanged() {
      return !request.resource.data.diff(resource.data).affectedKeys().hasAny(['createdAt']);
    }
    
    // ========================================
    // USER DATA - PERSONAL SCOPE
    // ========================================
    
    match /users/{userId} {
      // User can only access their own personal data
      allow read, write: if isOwnerLegacy(userId);
      
      // User profile (personal settings, not org-specific)
      match /profile/{document=**} {
        allow read, write: if isOwnerLegacy(userId);
      }
      
      // User preferences (UI, language, etc.)
      match /preferences/{document=**} {
        allow read, write: if isOwnerLegacy(userId);
      }
      
      // User settings (app configuration)
      match /settings/{document=**} {
        allow read, write: if isOwnerLegacy(userId);
      }
      
      // Calendar sync configuration (personal)
      match /calendarSync/{document=**} {
        allow read, write: if isOwnerLegacy(userId);
      }
      
      // ========================================
      // AGENCY-ARTIST LINKS (User-scoped)
      // ========================================
      
      // Active links (agency → artist relationships)
      match /links/{linkId} {
        allow read: if isOwnerLegacy(userId);
        allow create: if isOwnerLegacy(userId) && isValidLink();
        allow update: if isOwnerLegacy(userId) && isValidLink();
        allow delete: if isOwnerLegacy(userId);
      }
      
      // Link invitations received (artist inbox)
      match /linkInvitations/{invitationId} {
        allow read: if isOwnerLegacy(userId);
        // Only the inviting agency can create
        allow create: if isAuthenticated() && 
          request.resource.data.artistUserId == userId &&
          isValidLinkInvitation();
        // Artist can update to accept/reject
        allow update: if isOwnerLegacy(userId) &&
          resource.data.status == 'pending' &&
          request.resource.data.status in ['accepted', 'rejected'];
        allow delete: if isOwnerLegacy(userId);
      }
      
      // Sent link invitations (agency outbox)
      match /sentLinkInvitations/{invitationId} {
        allow read: if isOwnerLegacy(userId);
        allow create: if isOwnerLegacy(userId) && isValidLinkInvitation();
        // Agency can cancel pending invitations
        allow update: if isOwnerLegacy(userId) &&
          resource.data.status == 'pending' &&
          request.resource.data.status == 'cancelled';
        allow delete: if isOwnerLegacy(userId);
      }
      
      // ========================================
      // ORGANIZATION-SCOPED DATA (User → Org → Data)
      // ========================================
      
      match /organizations/{orgId} {
        allow read, write: if isOwnerLegacy(userId);
        
        // Organization profile and metadata
        match /profile/{document=**} {
          allow read, write: if userOwnsOrg(userId, orgId);
        }
        
        // ========================================
        // SCALABLE SUB-COLLECTIONS
        // Optimized for large datasets with proper indexing
        // ========================================
        
        // Finance snapshots with nested transactions
        match /finance_snapshots/{snapshotId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          
          // Transactions sub-collection (supports pagination)
          match /transactions/{transactionId} {
            allow read, write: if userOwnsOrg(userId, orgId);
            allow list: if userOwnsOrg(userId, orgId);
          }
        }
        
        // Shows (with full show data including agencies, contracts, costs)
        match /shows/{showId} {
          allow read: if userOwnsOrg(userId, orgId);
          allow create: if userOwnsOrg(userId, orgId) && 
            hasRequiredFields(['city', 'country', 'date', 'fee', 'status']);
          allow update: if userOwnsOrg(userId, orgId);
          allow delete: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Contacts (promoters, venues, etc.)
        match /contacts/{contactId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Venues
        match /venues/{venueId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Calendar events
        match /calendar_events/{eventId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Budgets
        match /budgets/{budgetId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Actions/tasks
        match /actions/{actionId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Itineraries (travel plans)
        match /itineraries/{itineraryId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
        
        // Contracts (linked to shows)
        match /contracts/{contractId} {
          allow read, write: if userOwnsOrg(userId, orgId);
          allow list: if userOwnsOrg(userId, orgId);
        }
      }
      
      // ========================================
      // LEGACY PATHS (Backward Compatibility)
      // Maintained during migration period
      // ========================================
      
      match /shows/{showId} {
        allow read, write: if isOwnerLegacy(userId);
      }
      
      match /contacts/{contactId} {
        allow read, write: if isOwnerLegacy(userId);
      }
      
      match /venues/{venueId} {
        allow read, write: if isOwnerLegacy(userId);
      }
      
      match /transactions/{transactionId} {
        allow read, write: if isOwnerLegacy(userId);
      }
      
      match /itineraries/{itineraryId} {
        allow read, write: if isOwnerLegacy(userId);
      }
      
      match /calendarEvents/{eventId} {
        allow read, write: if isOwnerLegacy(userId);
      }
      
      match /calendar_events/{eventId} {
        allow read, write: if isOwnerLegacy(userId);
      }
      
      match /actions/{actionId} {
        allow read, write: if isOwnerLegacy(userId);
      }
      
      match /budgets/{budgetId} {
        allow read, write: if isOwnerLegacy(userId);
      }
    }
    
    // ========================================
    // MULTI-TENANCY: ORGANIZATIONS
    // Production-ready with granular permissions
    // ========================================
    
    match /organizations/{orgId} {
      // Anyone can create an organization (becomes owner)
      allow create: if isAuthenticated() &&
        request.resource.data.keys().hasAll(['name', 'type', 'createdBy']) &&
        request.resource.data.createdBy == getUserId();
      
      // Only members can read organization data
      allow read: if canRead(orgId);
      
      // Only owner/admin can update organization settings
      allow update: if isAdmin(orgId);
      
      // Only owner can delete organization
      allow delete: if isOwner(orgId);
      
      // ========================================
      // MEMBERS SUB-COLLECTION
      // ========================================
      match /members/{memberId} {
        allow read: if canRead(orgId);
        allow create: if canInviteMembers(orgId) &&
          request.resource.data.keys().hasAll(['userId', 'email', 'role', 'permissions', 'joinedAt']);
        allow update: if canManageMembers(orgId) &&
          // Cannot change owner role unless you are owner
          (request.resource.data.role != 'owner' || isOwner(orgId)) &&
          (resource.data.role != 'owner' || isOwner(orgId));
        allow delete: if canRemoveMembers(orgId) && 
          // Cannot remove owner
          resource.data.role != 'owner';
      }
      
      // ========================================
      // SHOWS SUB-COLLECTION
      // ========================================
      match /shows/{showId} {
        allow read: if canReadShows(orgId);
        allow create: if canWriteShows(orgId) &&
          hasRequiredFields(['city', 'country', 'date', 'fee', 'status']);
        allow update: if canWriteShows(orgId);
        allow delete: if canDeleteShows(orgId);
      }
      
      // ========================================
      // FINANCE SNAPSHOTS SUB-COLLECTION
      // ========================================
      match /finance_snapshots/{snapshotId} {
        allow read: if canReadFinance(orgId);
        allow create, update: if canWriteFinance(orgId);
        allow delete: if canDeleteFinance(orgId);
        
        // Transactions nested collection
        match /transactions/{txId} {
          allow read: if canReadFinance(orgId);
          allow create: if canWriteFinance(orgId) &&
            request.resource.data.createdBy == getUserId();
          allow update: if canWriteFinance(orgId) &&
            (isAdmin(orgId) || resource.data.createdBy == getUserId());
          allow delete: if canDeleteFinance(orgId);
        }
      }
      
      // ========================================
      // CALENDAR EVENTS SUB-COLLECTION
      // ========================================
      match /calendar_events/{eventId} {
        allow read: if canReadCalendar(orgId);
        allow create, update: if canWriteCalendar(orgId);
        allow delete: if canDeleteCalendar(orgId);
      }
      
      // ========================================
      // CONTACTS SUB-COLLECTION
      // ========================================
      match /contacts/{contactId} {
        allow read: if canReadContacts(orgId);
        allow create, update: if canWriteContacts(orgId);
        allow delete: if canDeleteContacts(orgId);
      }
      
      // ========================================
      // VENUES SUB-COLLECTION
      // ========================================
      match /venues/{venueId} {
        allow read: if canReadContacts(orgId);
        allow create, update: if canWriteContacts(orgId);
        allow delete: if canDeleteContacts(orgId);
      }
      
      // ========================================
      // CONTRACTS SUB-COLLECTION
      // ========================================
      match /contracts/{contractId} {
        allow read: if canReadContracts(orgId);
        allow create: if canWriteContracts(orgId) &&
          request.resource.data.keys().hasAll(['title', 'showId', 'status']);
        allow update: if canWriteContracts(orgId);
        allow delete: if canDeleteContracts(orgId);
        
        // Contract parties nested collection
        match /parties/{partyId} {
          allow read: if canReadContracts(orgId);
          allow create, update: if canWriteContracts(orgId);
          allow delete: if canDeleteContracts(orgId);
        }
      }
      
      // ========================================
      // ITINERARIES SUB-COLLECTION
      // ========================================
      match /itineraries/{itineraryId} {
        allow read: if canReadTravel(orgId);
        allow create, update: if canWriteTravel(orgId);
        allow delete: if canDeleteTravel(orgId);
      }
      
      // ========================================
      // ACTIONS SUB-COLLECTION
      // ========================================
      match /actions/{actionId} {
        allow read: if canRead(orgId);
        allow create, update: if canWrite(orgId);
        allow delete: if canWrite(orgId);
      }
      
      // ========================================
      // INVITATIONS SUB-COLLECTION
      // ========================================
      match /invitations/{inviteId} {
        allow read: if canInviteMembers(orgId) || 
          (isAuthenticated() && getUserEmail() == resource.data.email);
        allow create: if canInviteMembers(orgId) &&
          request.resource.data.invitedBy == getUserId() &&
          request.resource.data.status == 'pending' &&
          request.resource.data.keys().hasAll(['email', 'role', 'organizationId', 'invitedBy', 'status']);
        allow update: if (isAuthenticated() &&
          getUserEmail() == resource.data.email &&
          request.resource.data.status in ['accepted', 'rejected']) ||
          canInviteMembers(orgId);
        allow delete: if canInviteMembers(orgId);
      }
      
      // ========================================
      // AUDIT LOGS SUB-COLLECTION
      // ========================================
      match /audit_logs/{logId} {
        allow read: if isAdmin(orgId);
        // Only Cloud Functions can write audit logs
        allow create, update, delete: if false;
      }
      
      // ========================================
      // TIMELINE EVENTS SUB-COLLECTION
      // ========================================
      match /timeline_events/{eventId} {
        allow read: if canRead(orgId);
        allow create: if canWrite(orgId) &&
          request.resource.data.userId == getUserId();
        allow update: if canWrite(orgId) &&
          resource.data.userId == getUserId();
        allow delete: if canWrite(orgId);
      }
    }
    
    
    // ========================================
    // ROOT COLLECTIONS (Cross-Organization)
    // ========================================
    
    // Timeline events at root level (for cross-org queries)
    match /timeline_events/{eventId} {
      function getEventOrgId() {
        return resource.data.organizationId;
      }
      
      function getRequestOrgId() {
        return request.resource.data.organizationId;
      }
      
      allow read: if isAuthenticated() && isMember(getEventOrgId());
      allow create: if isAuthenticated() && 
        isMember(getRequestOrgId()) &&
        canWrite(getRequestOrgId()) &&
        request.resource.data.userId == getUserId();
      allow update, delete: if isAuthenticated() && 
        isMember(getEventOrgId()) &&
        canWrite(getEventOrgId()) &&
        resource.data.userId == getUserId();
    }
    
    // Activities (for activity feed - shared with timeline)
    match /activities/{activityId} {
      // Read allowed for authenticated users (client filters by orgId)
      allow read: if isAuthenticated();
      
      // Create: must be member of org
      allow create: if isAuthenticated() && 
        isMember(request.resource.data.organizationId) &&
        canWrite(request.resource.data.organizationId) &&
        request.resource.data.userId == getUserId();
      
      // Update/Delete: must be member and creator
      allow update, delete: if isAuthenticated() && 
        isMember(resource.data.organizationId) &&
        canWrite(resource.data.organizationId) &&
        resource.data.userId == getUserId();
    }
    
    // ========================================
    // GLOBAL COLLECTIONS (Shared Data)
    // ========================================
    
    // Contracts at root level (for cross-show queries)
    match /contracts/{contractId} {
      function getContractOrgId() {
        return resource.data.organizationId;
      }
      
      function getRequestContractOrgId() {
        return request.resource.data.organizationId;
      }
      
      allow read: if isAuthenticated() && canReadContracts(getContractOrgId());
      allow create: if isAuthenticated() && 
        canWriteContracts(getRequestContractOrgId()) &&
        request.resource.data.keys().hasAll(['title', 'organizationId', 'status']);
      allow update: if isAuthenticated() && canWriteContracts(getContractOrgId());
      allow delete: if isAuthenticated() && canDeleteContracts(getContractOrgId());
    }
    
    // ========================================
    // DENY ALL OTHER ACCESS
    // ========================================
    
    // Deny all other access by default (security by default)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
